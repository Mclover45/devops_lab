{% for vhost in apache_vhosts %}
NameVirtualHost *:80
    <VirtualHost *:80>
  ServerName {{ vhost.servername }}
  DocumentRoot {{ vhost.documentroot }}
  ServerAdmin {% if vhost.serveradmin %}{{ vhost.serveradmin }}{% endif %}
<Directory "{{ vhost.directorypath }}" >
    AllowOverride All
    Options Indexes FollowSymLinks
    Order allow,deny
    Allow from all
</Directory>
</VirtualHost>
{% endfor %}
